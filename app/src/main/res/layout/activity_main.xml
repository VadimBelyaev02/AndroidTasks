<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintLeft_toLeftOf="parent"
    tools:context=".MainActivity">

    <LinearLayout
        style="@style/linearLayoutMainContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/firstScreenButton"
            style="@style/mainScreenButtonStyles"
            android:layout_marginBottom="20dp"
            android:onClick="openActivity"
            android:text="@string/firstScreenText" />

        <Button
            android:id="@+id/secondScreenButton"
            style="@style/mainScreenButtonStyles"
            android:layout_marginBottom="20dp"
            android:onClick="openActivity"
            android:text="@string/secondScreenText" />

        <Button
            android:id="@+id/thirdScreenButton"
            style="@style/mainScreenButtonStyles"
            android:onClick="openActivity"
            android:text="@string/thirdScreenText" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>