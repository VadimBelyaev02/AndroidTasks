<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstScreenActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/firstActivityToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="?android:attr/homeAsUpIndicator"
        app:popupTheme="?attr/actionBarPopupTheme"
        app:title="First Window" />


    <include
        android:id="@+id/commonButtonsLayout"
        layout="@layout/common_buttons"/>

    <ImageView
        android:id="@+id/bearPicture"
        android:layout_width="200dp"
        android:layout_height="279dp"
        app:layout_constraintBottom_toTopOf="@id/commonButtonsLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firstActivityToolbar"
        app:srcCompat="@drawable/picture" />

    <TextView
        android:id="@+id/hiddenText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hiddenText"
        app:layout_constraintBottom_toTopOf="@id/commonButtonsLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firstActivityToolbar"
        />
</androidx.constraintlayout.widget.ConstraintLayout>