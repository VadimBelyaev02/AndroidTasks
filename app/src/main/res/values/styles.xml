<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainScreen">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="MainScreen.LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MainScreen.NavigationBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FirstScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="FirstScreen.List">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FirstScreenListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">72dp</item>
    </style>

    <style name="FirstScreenListItem.AvatarCardView">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="FirstScreenListItem.AvatarImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:contentDescription">@string/avatarDescription</item>
    </style>

    <style name="FirstScreenListItem.Name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:text">Name</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FirstScreenListItem.DetailsContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="FirstScreenListItem.Age">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:text">Age</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FirstScreenListItem.Sex">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:contentDescription">Sex</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:src">@drawable/ic_male</item>
    </style>


    <style name="SecondScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SecondScreen.List">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">75dp</item>
    </style>

    <style name="SecondScreenListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">88dp</item>
    </style>

    <style name="SecondScreenListItem.AvatarContainer">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>


    <style name="SecondScreenListItem.Avatar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:contentDescription">@string/avatarDescription</item>
    </style>

    <style name="SecondScreenListItem.DetailsContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="SecondScreenListItem.Name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:text">Name</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SecondScreenListItem.Age">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:text">Age</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SecondScreenListItem.Description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:text">Age</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SecondScreenListItem.Sex">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:contentDescription">@string/sex</item>
        <item name="android:src">@drawable/ic_male</item>
    </style>

    <style name="ThirdScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ThirdScreen.Table">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">75dp</item>
    </style>

    <style name="ThirdScreenTableItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">100dp</item>
        <item name="cardBackgroundColor">#CDE8E2</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">10sp</item>
    </style>

    <style name="ThirdScreenTableItem.FrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">16dp</item>
    </style>



    <style name="ThirdScreenTableItem.CardImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.1</item>
        <item name="android:background">#CCE7E1</item>
        <item name="android:contentDescription">@string/cardIconDescription</item>
        <item name="android:src">@drawable/person_add_90</item>
    </style>

    <style name="ThirdScreenTableItem.CardTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:text">@string/cardText</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FourthScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="FourthScreen.List">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>


    <style name="FourthScreenListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>

    </style>

    <style name="FourthScreenListItem.Square">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FourthScreenListItem.HalfSquare">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">100dp</item>
    </style>

    <style name="FourthScreenListItem.Rectangle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@color/lightGreen</item>
    </style>







    <style name="MainScreen.mainScreenButtonStyles">
        <item name="android:textColor">#F2C500</item>
        <item name="android:textSize">22dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">175dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="secondaryScreenButtonStyles">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">#00F4E8</item>

    </style>

    <style name="tableElementStyles">
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="layout">@layout/third_screen_table_card</item>
        <!--                layout="@layout/table_card"-->

    </style>




    <string name="leftButtonText">Left button</string>
    <string name="rightButtonText">Right button</string>

    <string name="hiddenText">Hidden</string>

    <dimen name="view_width">300px</dimen>
    <dimen name="view_height">300px</dimen>

    <string name="previousButtonText">Previous</string>
    <string name="nextButtonText">Next</string>
    <string name="currentIndexText">Index</string>
</resources>

