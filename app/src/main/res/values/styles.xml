<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainScreen">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="MainScreen.LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MainScreen.NavigationBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MainScreen.mainScreenButtonStyles">
        <item name="android:textColor">#F2C500</item>
        <item name="android:textSize">22dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">175dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="secondaryScreenButtonStyles">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">#00F4E8</item>

    </style>

    <style name="tableElementStyles">
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="layout">@layout/table_card</item>
        <!--                layout="@layout/table_card"-->

    </style>

    <style name="cardViewStyles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">100dp</item>
        <item name="cardBackgroundColor">#CDE8E2</item>
        <item name="android:background">#8BC34A</item>
        <item name="android:layout_margin">8dp</item>

        <item name="cardCornerRadius">10sp</item>
    </style>

    <style name="cardFrameLayoutStyles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="cardImageViewStyles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.1</item>
        <item name="android:background">#CCE7E1</item>
        <item name="android:contentDescription">@string/cardIconDescription</item>
        <item name="android:src">@drawable/person_add_90</item>
    </style>

    <style name="cardTextViewStyles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:text">@string/cardText</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <string name="leftButtonText">Left button</string>
    <string name="rightButtonText">Right button</string>

    <string name="hiddenText">Hidden</string>

    <dimen name="view_width">300px</dimen>
    <dimen name="view_height">300px</dimen>

    <string name="previousButtonText">Previous</string>
    <string name="nextButtonText">Next</string>
    <string name="currentIndexText">Index</string>
</resources>

